T = int(input())
for tc in range(1, T + 1):
    N = int(input())
    arr = list(input().split())
    result = []
    cnt = N//2
    if N % 2:#총 개수가 홀수인 경우에-
        arr_a = arr[0:cnt]
        arr_b = arr[cnt:N+1]
    else:
        arr_a = arr[0:cnt]
        arr_b = arr[cnt:N+1]
    while arr_a:
        result.append(arr_b[-1])
        arr_b.pop()
        result.append(arr_a[-1])
        
            # 빈 리스트를 만들고 그 안에 셔플된 결과를 집어넣으면 되지 않을까?
#퍼펙트 셔플이란, 덱을 절반으로 나누고, 나눈 것들에서 교대로 뽑아 새로운 덱을 만드는 것을 말함